@model CartelPeliculas.MVC.Models.PeliculasModel
<body style="bac">

</body>
<div>
    <h1 style="text-align:center; color:white">@Model.PeliculaSel.original_title</h1>
</div>
<div class="row">
    <div class="col-md-12">
        <img src="https://image.tmdb.org/t/p/w342@(Model.PeliculaSel.poster_path)" class="center-block" />
    </div>
    <hr />
</div>
<div class="col-md-12">
    <h2 style="color: white;">Sipnósis:</h2>
    <p style="color: white;">@Model.PeliculaSel.overview</p>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <p style="color: white;">Fecha de estreno: @Model.PeliculaSel.release_date.ToShortDateString()</p>
        </div>
        
    </div>
    <div class="row">
        <div class="col-md-6">
            <p style="color: white;">Valoración: @Model.PeliculaSel.vote_average / Votos: @Model.PeliculaSel.vote_count</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p style="color: white;"><i class="fas fa-link"></i> <a href="@Model.PeliculaSel.homepage" target="_blank">@Model.PeliculaSel.homepage</a></p>
        </div>
    </div>
</div>